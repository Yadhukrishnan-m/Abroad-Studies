<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title> admin</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/admin-assets/imgs/theme/nova.png"
    />
    <!-- Template CSS -->
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
  </head>

  <body>
    <section
      class="content-main mt-80 mb-80"
      style="max-width: 500px; margin: 0 auto"
    >
      <div class="card mx-auto card-login">
        <div class="card-body">
          <h4 class="card-title mb-4">Sign in</h4>

          <form
            action="/admin/"
            method="post"
            id="loginForm"
            onsubmit="return validateForm()"
          >
            <p
              id="responseMessage"
              style="text-align: center; color: #e74c3c"
            ></p>
            <!-- for showing the messeges on ajax response-->

            <% if (errorMsg) { %>
            <h6 style="text-align: center; color: #e74c3c"><%= errorMsg %></h6>
            <% } %> <% if (successMsg) { %>
            <h6 style="text-align: center; color: #2ecc71">
              <%= successMsg %>
            </h6>
            <% } %>
            <div class="mb-3">
              <input
                class="form-control"
                placeholder="email"
                id="email"
                name="email"
                type="text"
                required
              />
              <p
                id="emailMessage"
                style="text-align: center; color: #e74c3c"
              ></p>
            </div>
            <!-- form-group// -->
            <div class="mb-3">
              <input
                class="form-control"
                placeholder="Password"
                id="password"
                type="password"
                name="password"
                required
              />
              <i
                class="far fa-eye fa-eye-slash"
                id="eyeIcon"
                style="
                  position: absolute;
                  top: 55%;
                  right: 40px;
                  transform: translateY(-50%);
                  cursor: pointer;
                "
              ></i>
            </div>
            <!-- form-group// -->

            <div class="mb-4">
              <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
            <!-- form-group// -->
          </form>
        </div>
      </div>
    </section>
    <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin-assets/js/main.js" type="text/javascript"></script>
    <script src="/admin-assets/js/login.js"></script>
    <script src="/admin-assets/js/loginAjax.js"></script>

    <script>
      const eyeIcon = document.getElementById("eyeIcon");
      const password = document.getElementById("password");

      eyeIcon.addEventListener("click", () => {
        const type =
          password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);

        eyeIcon.classList.toggle("fa-eye-slash");
      });
    </script>
  </body>
</html>
