<style>
  /* Process Flow Styles */
  .process-flow {
      padding: 2rem 0;
  }

  .process-step-wrapper {
      flex: 1;
      max-width: 200px;
      z-index: 1;
  }

  .process-icon {
      background-color: #fff;
      border-radius: 50%;
      padding: 15px;
      margin: 0 auto;
      position: relative;
      width: 80px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
  }

  .process-step-number {
      font-size: 0.9rem;
      color: #0d6efd;
  }

  .process-title {
      font-size: 1rem;
      line-height: 1.4;
  }

  /* Updated Connector Line Styles */
  .connector-line {
      position: absolute;
      top: 40px;
      left: calc(100% - 10px);
      width: calc(100% - 60px);
      height: 2px;
      z-index: 0;
  }

  .line {
      position: absolute;
      top: 50%;
      left: 0;
      width: 100%;
      height: 3px;
      background-color: #DDDDDD;
      transform: translateY(-50%);
  }

  .arrow {
      position: absolute;
      right: -1px;
      top: 50%;
      width: 8px;
      height: 8px;
      border-top: 3px solid #DDDDDD;
      border-right: 3px solid #DDDDDD;
      transform: translateY(-50%) rotate(45deg);
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
      .process-step-wrapper {
          max-width: 100%;
          margin-bottom: 2rem;
      }

      .connector-line {
          display: none;
      }
  }
</style>

