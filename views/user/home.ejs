    font-size: 24px;
    margin-bottom: 10px;
  }
  
  .form-subtitle {
    color: #666;
    margin-bottom: 30px;
    font-size: 14px;
  }
  
  .consultation-form {
    display: grid;
    gap: 20px;
  }
  
  .form-group {
    position: relative;
  }
  
  .form-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.2s;
  }
  
  .form-input:focus {
    border-color: #1a237e;
