<%- include("../partials/user/header.ejs") %>


  <main class="main">

    <!-- Page Title -->
    <div  data-aos="fade">
      <section id="hero" class="hero section dark-background" style="border-radius: 45px;">
        <% if (banner) { %> 
          <img src="/<%= banner.banner %>" alt="Uploaded Banner" class="img-fluid">
        <% } else { %> 
          <p>No banner uploaded yet.</p>
        <% } %>
    
        <div class="container">
          <h2 data-aos="fade-up" data-aos-delay="100">Courses</h2>
          <p data-aos="fade-up" data-aos-delay="200">Explore a variety of courses tailored to help you achieve your dream of studying abroad.</p>
          <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
            <a href="/contact" class="btn-get-started">Contact Us</a>
          </div>
        </div>
        
      </section>  
 
      
      <!-- <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="index.html">Home</a></li>
            <li class="current">Courses</li>
          </ol>
        </div>
      </nav> -->
    </div><!-- End Page Title -->

    <!-- Courses Section -->
    <section id="courses" class="courses section">

      <div class="container">
        <div class="row">
          <div class="container py-5">
            <div class="row g-4">
              <% courses.forEach(course => { %>
                <div class="col-lg-4 col-md-6">
                  <div class="course-card">
                    <div class="course-image-wrapper">
                      <img src="<%= course.image %>" class="course-image" alt="<%= course.course %>">
                      <!-- <div class="course-overlay">
                        <span class="course-category">Category</span>
                      </div> -->
                    </div>
                    <div class="course-content">
                      <h3 class="course-title"><%= course.course %></h3>
                      <p class="course-description"><%= course.description || 'No description available' %></p>
                      <div class="course-meta">
                        <!-- <span class="course-duration"><i class="bi bi-clock"></i> 8 weeks</span>
                        <span class="course-level"><i class="bi bi-bar-chart"></i> Beginner</span> -->
                      </div>
                      <a href="#" class="btn btn-primary course-btn">Learn with Randet</a>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
          
          <style>
            .course-card {
              background-color: #ffffff;
              border-radius: 20px;
              overflow: hidden;
              box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
              transition: all 0.3s ease;
            }
          
            .course-card:hover {
              transform: translateY(-10px);
              box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            }
          
            .course-image-wrapper {
              position: relative;
              overflow: hidden;
              padding-top: 56.25%; /* 16:9 Aspect Ratio */
            }
          
            .course-image {
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              object-fit: cover;
              transition: transform 0.5s ease;
            }
          
            .course-card:hover .course-image {
              transform: scale(1.1);
            }
          
            .course-overlay {
              position: absolute;
              top: 20px;
              left: 20px;
              background-color: rgba(255, 255, 255, 0.9);
              padding: 8px 16px;
              border-radius: 30px;
            }
          
            .course-category {
              font-size: 0.9rem;
              font-weight: 600;
              color: #1e2b7b;
              text-transform: uppercase;
            }
          
            .course-content {
              padding: 25px;
            }
          
            .course-title {
              font-size: 1.5rem;
              font-weight: 700;
              color: #1e2b7b;
              margin-bottom: 15px;
              transition: color 0.3s ease;
            }
          
            .course-card:hover .course-title {
              color: #ff6f61;
            }
          
            .course-description {
              font-size: 1rem;
              color: #555;
              margin-bottom: 20px;
              line-height: 1.6;
            }
          
            .course-meta {
              display: flex;
              justify-content: space-between;
              margin-bottom: 20px;
              font-size: 0.9rem;
              color: #777;
            }
          
            .course-duration, .course-level {
              display: flex;
              align-items: center;
            }
          
            .course-duration i, .course-level i {
              margin-right: 5px;
            }
          
            .course-btn {
              width: 100%;
              padding: 12px;
              font-weight: 600;
              text-transform: uppercase;
              border-radius: 30px;
              transition: all 0.3s ease;
            }
          
            .course-btn:hover {
              background-color: #ff6f61;
              border-color: #ff6f61;
            }
          
            @media (max-width: 768px) {
              .course-title {
                font-size: 1.3rem;
              }
          
              .course-description {
                font-size: 0.9rem;
              }
          
              .course-meta {
                flex-direction: column;
                gap: 10px;
              }
            }
          </style>
        
          
       
        </div>
      </div>




  <!-- Study Destinations Section -->
